@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}
@{
    ViewBag.Title = "Cập nhật thông tin";
}

@model ManageRoles.ViewModels.TaiKhoanModel

<div style="padding: 0 50px">
    <h4 style="color:red">Cập nhật thông tin khách hàng</h4>
   <div style="display:flex">
       <div class="container-info" style="flex:1;background-color: #e7e7e7;    padding: 10px 50px;
    border-radius: 6px;">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @*<div style="color:blue">Thông tin lưu trú</div>*@
            <input type="text" class="form-control hidden" id="Id" name="Id" placeholder="" value="@Model.Id">
            <input type="text" class="form-control hidden" id="MatKhau" name="MatKhau" placeholder="" value="@Model.MatKhau">
            <input type="text" class="form-control hidden" id="IdLoaiTK" name="IdLoaiTK" placeholder="" value="@Model.IdLoaiTK">
            @*<div style="color:red">Dấu (*): Trường bắt buộc nhập</div>*@
            <div class="form-group row" style="margin-top:10px">
                <label for="HoTen" class="col-sm-3 col-form-label">Họ <span style="color:red">*</span></label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="HoTen" id="HoTen" placeholder="Họ" value="@Model.HoTen">
                </div>
            </div>
                <div class="form-group row" style="margin-top:10px">
                    <label for="Ten" class="col-sm-3 col-form-label">Tên <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="Ten" id="Ten" placeholder="Tên" value="@Model.Ten">
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="Email" class="col-sm-3 col-form-label">Email <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="Email" name="Email" placeholder="Email" value="@Model.Email">
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="DiaChi" class="col-sm-3 col-form-label">Địa chỉ <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="Diachi" name="DiaChi" placeholder="Địa chỉ" value="@Model.DiaChi">
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="DienThoai" class="col-sm-3 col-form-label">Điện thoại <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="DienThoai" id="DienThoai" placeholder="Điện thoại" value="@Model.DienThoai">
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="Anh" class="col-sm-3 col-form-label">Ảnh đại diện<span style="color:red">*</span></label>
                    <input type="text" class="form-control hidden" name="Anh" id="Anh" placeholder="" value="@Model.Anh">
                    <div class="col-sm-6">
                        @Html.TextBox("file", "", new { type = "file" })
                    </div>
                </div>

                <div style="display:flex; justify-content:center">
                    <button class="btn-back" style="margin-top:20px; padding:10px 30px; background-color:green; color:#ffffff; border-radius:6px;margin-right:10px">
                        <a style="color:#ffffff;" href="/User/index">Danh sách khách hàng</a>
                    </button>
                    <button type="submit" class="btn-edit" style="margin-top:20px; padding:10px 30px; background-color:green; color:#ffffff; border-radius:6px">
                        Cập nhật
                    </button>

                </div>

        }
       </div>
      
   </div>

   
</div>

