<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/Template/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Template/dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/Template/datatablejs/jquery.dataTables.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="../favicon.ico" type="image/x-icon">


    @Scripts.Render("~/bundles/modernizr")
    <!-- Custom Fonts -->
    <link href="~/Template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <style>
        #example {
            border-bottom: none;
        }

        #example th {
            background: #3535b9;
            color: white;
            font-size: 16px;
            border:none
        }

        #example tr td {
            border-bottom: none !important;
        }

        .nav .open>a, .nav .open>a:focus, .nav .open>a:hover {
            background-color: #f8f8f8;
        }
    </style>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div style="height: 140px;
    display: flex;
    align-items: center;    COLOR: #000000;
    font-size: 40px;    box-shadow: 5px 5px 5px grey;">
                <a href="/homeadmin/index"><img src="~/images/header/header_logo.png" alt="" class="header_logo"></a>
                <div style="    text-align: center;
    width: 90%;">QUẢN TRỊ WEBSITE</div>

                <div>
                    <!-- /.navbar-header -->
                    <ul class="nav navbar-top-links navbar-right">
                        <li class="dropdown">
                            @{
                                string username = "";
                                if (Request.Cookies["userInfo"] != null)
                                {
                                    username = Request.Cookies["userInfo"]["Username"];
                                }
                            }
                        </li>
                        <li class="dropdown">
                           <div style="display:flex">
                               <a href="#"><i class="fa fa-bell" style="font-size:25px"></i></a>
                               <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="    font-size: 25px;">
                                   <img style="width:50px; height:50px; border-radius:50%" src="~/images/index/content/@ViewBag.Avatar" alt="" class="header_avatar">
                               </a>
                               <ul class="dropdown-menu dropdown-user">
                                   <li>
                                       <a href="/Home/Index" style="font-size:20px"><i class="fa fa-home"></i> Website</a>
                                   </li>
                                   <li>
                                       <a href="/Home/Logout" style="font-size:20px"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
                                   </li>
                               </ul>
                           </div>
                            
                            <!-- /.dropdown-user -->
                        </li>
                        <!-- /.dropdown -->
                    </ul>
                </div>
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
           
            <!-- /.navbar-top-links -->
            @Html.Action("ShowMenus", "Homeadmin")
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper" style="padding-top:20px">
            <div class="row">
                <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                <script src="~/Template/vendor/bootstrap/js/bootstrap.min.js"></script>
                <script src="~/Template/vendor/metisMenu/metisMenu.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                <script src="~/Template/dist/js/sb-admin-2.min.js"></script>
                <script src="~/Scripts/jquery.dataTables.min.js"></script>
                <link href="~/Content/Validation.css" rel="stylesheet" />
                @RenderBody()
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>

   
</body>
</html>
