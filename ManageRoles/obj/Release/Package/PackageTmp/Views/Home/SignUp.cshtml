@{
    ViewBag.Title = "Danh sách cửa hàng";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link rel="stylesheet" href="~/Template/sign_up/style.css">
<link rel="stylesheet" href="~/Template/sign_up/responsive.css">
 <!-- PATH BAR -->
<div class="path-bar">
    <div class="container">
        <div class="row">
            <a href="#">Trang chủ</a>
            <span>/</span>
            <a href="#">Đăng ký tài khoản</a>
        </div>
    </div>
</div>
<!-- CONTENT -->
<div class="content container">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-7 col-sm-7 col-12">
            <h3 class="text-center">ĐĂNG KÝ TÀI KHOẢN</h3>
            <div class="row justify-content-center social_login">
                <a href="#">
                    <img width="129px" height="37px" alt="facebook-login-button" src="//bizweb.dktcdn.net/assets/admin/images/login/fb-btn.svg">
                </a>
                <a href="#">
                    <img width="129px" height="37px" alt="google-login-button" src="//bizweb.dktcdn.net/assets/admin/images/login/gp-btn.svg">
                </a>
            </div>
            <div class="line-throw text-center">
                <span>hoặc</span>
            </div>
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row justify-content-between">
                    <div class="col-xl-6 col-lg-6 col-sm-6 col-12">
                        <fieldset class="form-group mb-10">
                            <label>HỌ<span class="required">*</span></label>
                            <input placeholder="Nhập Họ" type="text" class="form-control form-control-lg" value="" name="HoTen" id="HoTen" required="">
                        </fieldset>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-6 col-12">
                        <fieldset class="form-group mb-10">
                            <label>TÊN<span class="required">*</span></label>
                            <input placeholder="Nhập Tên" type="text" class="form-control form-control-lg" value="" name="Ten" id="Ten" required="">
                        </fieldset>
                    </div>
                </div>

                <fieldset class="form-group mb-10">
                    <label>Email<span class="required">*</span></label>
                    <input placeholder="Nhập Địa chỉ Email" type="email" class="form-control form-control-lg" value="" name="email" id="email" required="" data-validation="email">
                </fieldset>
                <fieldset class="form-group mb-0">
                    <label>Mật khẩu<span class="required">*</span></label>
                    <input placeholder="Nhập Mật khẩu" type="password" class="form-control form-control-lg" value="" name="MatKhau" id="MatKhau" required="">
                </fieldset>
                <fieldset class="form-group mb-10">
                    <label>SỐ ĐIỆN THOẠI<span class="required">*</span></label>
                    <input placeholder="Nhập Số điện thoại" type="text" class="form-control form-control-lg" value="" name="DienThoai" id="DienThoai" required="">
                </fieldset>
                <fieldset class="form-group mb-10">
                    <label>ĐỊA CHỈ<span class="required">*</span></label>
                    <input placeholder="Nhập Địa chỉ" type="text" class="form-control form-control-lg" value="" name="DiaChi" id="DiaChi" required="">
                </fieldset>
                <button class="" type="submit" >TẠO TÀI KHOẢN</button>
            }
                
            <h6 class="check-sign-up mt-3">
                <a href="/home/login">ĐĂNG NHẬP</a>
            </h6>
        </div>
    </div>
</div>

<script>
    var message =   @Html.Raw(Json.Encode(ViewBag.Message));

    if(message != null) {
        if(message.Success) {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: message.Msg,
                showConfirmButton: false,
                timer: 1500
            })
        }else if(!message.Success){
            Swal.fire({
                position: 'top-end',
                icon: 'error',
                title: message.Msg,
                showConfirmButton: false,
                timer: 3000
            })
        }
    }
    
    
</script>
