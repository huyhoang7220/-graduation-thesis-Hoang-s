@{
    ViewBag.Title = "Tạo mới khách hàng";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<div style="padding: 0 50px">
    <h4 style="color:red">Tạo mới thông tin khách hàng</h4>
    <div style="display:flex">
        <div class="container-info" style="flex:1;background-color: #e7e7e7;    padding: 10px 50px;
    border-radius: 6px;">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Thông báo !</strong> @TempData["Message"]
                </div>
            }
            @using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @*<div style="color:blue">Thông tin lưu trú</div>*@

                @*<div style="color:red">Dấu (*): Trường bắt buộc nhập</div>*@
                <div class="form-group row" style="margin-top:10px">
                    <label for="HoTen" class="col-sm-3 col-form-label">Họ <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="HoTen" id="HoTen" placeholder="Họ" value="" required>
                    </div>
                </div>
                <div class="form-group row" style="margin-top:10px">
                    <label for="Ten" class="col-sm-3 col-form-label">Tên <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="Ten" id="Ten" placeholder="Tên" value="" required>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="Email" class="col-sm-3 col-form-label">Email <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" value="" required>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="MatKhau" class="col-sm-3 col-form-label">Mật khẩu <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="MatKhau" id="MatKhau" placeholder="Mật khẩu" value="" required>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="DiaChi" class="col-sm-3 col-form-label">Địa chỉ <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="Diachi" name="DiaChi" placeholder="Địa chỉ" value="" required>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="DienThoai" class="col-sm-3 col-form-label">Điện thoại <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="DienThoai" id="DienThoai" placeholder="Điện thoại" value="" required>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="IdLoaiTK" class="col-sm-3 col-form-label">Loại tài khoản <span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        <select id="IdLoaiTK" name="IdLoaiTK"  class="form-control">
                            
                        </select>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:10px">
                    <label for="Gia" class="col-sm-3 col-form-label">Ảnh đại diện<span style="color:red">*</span></label>
                    <div class="col-sm-6">
                        @Html.TextBox("file", "", new { type = "file" })
                    </div>
                </div>

                <div style="display:flex; justify-content:center">
                    <button class="btn-back" style="margin-top:20px; padding:10px 30px; background-color:green; color:#ffffff; border-radius:6px;margin-right:10px">
                        <a style="color:#ffffff;" href="/User/index">Danh sách khách hàng</a>
                    </button>
                    <button type="submit" class="btn-edit" style="margin-top:20px; padding:10px 30px; background-color:green; color:#ffffff; border-radius:6px">
                        Tạo mới
                    </button>

                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var loaiTK = @Html.Raw(Json.Encode(ViewBag.LoaiTK));

        loaiTK.forEach((item) => {
            $("#IdLoaiTK").append('<option value="'+item.Id+'">'+item.Ten+'</option>');
        });

    })
</script>